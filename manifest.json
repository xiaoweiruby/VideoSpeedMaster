{
  "manifest_version": 3,
  "name": "VideoSpeedMaster",
  "version": "1.0",
  "description": "Control video playback speed from 0.5x to 16x across different platforms",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.bilibili.com/*",
    "*://*.vimeo.com/*",
    "*://*.netflix.com/*",
    "*://*.amazon.com/*/video/*",
    "*://*.amazon.com/*/tv/*",
    "*://*.primevideo.com/*",
    "*://*.iqiyi.com/*",
    "*://*.v.qq.com/*",
    "*://*.youku.com/*",
    "*://*.tudou.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.bilibili.com/*",
        "*://*.vimeo.com/*",
        "*://*.netflix.com/*",
        "*://*.amazon.com/*/video/*",
        "*://*.amazon.com/*/tv/*",
        "*://*.primevideo.com/*",
        "*://*.iqiyi.com/*",
        "*://*.v.qq.com/*",
        "*://*.youku.com/*",
        "*://*.tudou.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 